@{
}
@model IEnumerable<Instructor>
<table class="table">
    <tr>
        <th colspan="5">Instructor</th>
    </tr>
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Status</th>
        <th>Rank</th>
        <th>Hiring Date</th>
        <th>Details</th>
    </tr>

    @foreach (var instructor in Model)
    {
        <tr>
            <td>@instructor.FirstName</td>
            <td>@instructor.LastName</td>
            @if (instructor.isTenured)
            {
                <td>Permanent</td>
            } else
            {
                <td>Probationary</td>
            }
            <td>@instructor.Rank</td>
            <td>@instructor.HiringDate</td>
            <td><a asp-action="ShowDetail" asp-route-id="@instructor.Id">Show Details</a></td>
        </tr>
    }
</table>