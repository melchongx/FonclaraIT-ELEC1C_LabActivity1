@model Instructor;
<h1>Edit Instructor</h1>

<div asp-validation-summary="All"></div>

<form asp-action="EditInstructor" method="post">
    <input class="form-control" asp-for="Id" placeholder="@Model.Id">
    <input asp-for="FirstName" class="form-control" placeholder="@Model.FirstName" />
    <input asp-for="LastName" class="form-control" placeholder="@Model.LastName" />
    <select asp-for="isTenured" onselect="@Model.isTenured" class="form-control">
        <option value="False">Probationary</option>
        <option value="True">Permanent</option>
    </select>
    <select asp-for="Rank" asp-items="@Html.GetEnumSelectList<Rank>()" onselect="@Model.Rank" class="form-select" aria-label="Default select example"></select>
    <input asp-for="HiringDate" type="date" class="form-control" placeholder="@Model.HiringDate" />

    <button type="submit" class="btn btn-primary">Submit</button>
</form>


