@{
}
@model Instructor;
<h1>Add Instructor</h1>

<form asp-action="AddInstructor" method="post">
    <input asp-for="FirstName" class="form-control" placeholder="First Name" />
    <input asp-for="LastName" class="form-control" placeholder="Last Name" />
    <select asp-for="isTenured" class="form-control">
        <option value="False">Probationary</option>
        <option value="True">Permanent</option>
    </select>
    <select asp-for="Rank" asp-items="@Html.GetEnumSelectList<Rank>()" class="form-select" aria-label="Default select example"></select>
    <input asp-for="HiringDate" type="date" class="form-control" />

    <button type="submit" class="btn btn-primary">Submit</button>
</form>