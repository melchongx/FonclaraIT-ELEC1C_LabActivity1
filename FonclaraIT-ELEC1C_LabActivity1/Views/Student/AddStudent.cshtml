@{
}

@model Student;
<h1>Add Student</h1>

<form asp-action="AddStudent" method="post">
    <input class="form-control" asp-for="Id"  placeholder="ID">
    <input asp-for="FirstName" class="form-control" placeholder="First Name" />
    <input asp-for="LastName" class="form-control" placeholder="Last Name" />
    <input asp-for="GPA" class="form-control" placeholder="GPA" />
    <select asp-for="Course" asp-items="@Html.GetEnumSelectList<Course>()" class="form-select" aria-label="Default select example"></select>
    <input asp-for="AdmissionDate" type="date" class="form-control" />
    <input asp-for="Email" type="email" class="form-control" placeholder="Email" />

    <button type="submit" class="btn btn-primary">Submit</button>
</form>