@{
}

@model Student;
<h1>Edit Student</h1>

<form asp-action="EditStudent" method="post">
    <input class="form-control" asp-for="Id" placeholder="@Model.Id" readonly>
    <input asp-for="FirstName" class="form-control" placeholder="@Model.FirstName" />
    <input asp-for="LastName" class="form-control" placeholder="@Model.LastName" />
    <input asp-for="GPA" class="form-control" placeholder="@Model.GPA" />
    <select asp-for="Course" asp-items="@Html.GetEnumSelectList<Course>()" class="form-select" aria-label="Default select example" onselect="@Model.Course"></select>
    <input asp-for="AdmissionDate" type="date" class="form-control" placeholder="@Model.AdmissionDate"/>
    <input asp-for="Email" type="email" class="form-control" placeholder="@Model.Email" />

    <button type="submit" class="btn btn-primary">Update</button>
</form>