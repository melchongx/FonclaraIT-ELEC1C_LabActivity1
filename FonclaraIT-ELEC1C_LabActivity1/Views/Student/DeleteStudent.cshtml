@{
}
@model Student;
<h1>Delete Student</h1>

<form asp-action="DeleteStudent" method="post">
    <input class="form-control" asp-for="Id" placeholder="@Model.Id" readonly>
    <input asp-for="FirstName" class="form-control" placeholder="@Model.FirstName" readonly/>
    <input asp-for="LastName" class="form-control" placeholder="@Model.LastName" readonly/>
    <input asp-for="GPA" class="form-control" placeholder="@Model.GPA" readonly/>
    <select asp-for="Course" asp-items="@Html.GetEnumSelectList<Course>()" class="form-select" aria-label="Default select example" disabled onselect="@Model.Course"></select>
    <input asp-for="AdmissionDate" type="date" class="form-control" placeholder="@Model.AdmissionDate" readonly/>
    <input asp-for="Email" type="email" class="form-control" placeholder="@Model.Email" readonly/>

    <button type="submit" class="btn btn-danger">Delete</button>
    <button type="reset" onclick="history.back()" class="btn btn-light">Cancel</button>
</form>